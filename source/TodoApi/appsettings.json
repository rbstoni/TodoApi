{
  "ConnectionStrings": {
    //"TodoApi": "Server=(localdb)\\mssqllocaldb;Integrated Security=true;Initial Catalog=TodoApi;"
    "TodoApi": "Data Source=TodoApi.sqlite"
  },
  "SecurityHeaderSettings": {
    "Enable": true,
    "Headers": {
      "XFrameOptions": "SAMEORIGIN",
      "XContentTypeOptions": "nosniff",
      "ReferrerPolicy": "same-origin",
      "PermissionsPolicy": "geolocation=(), camera=()",
      "SameSite": "",
      "XXSS-Protection": "1; mode=block"
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "MiddlewareSettings": {
    "EnableHttpsLogging": true,
    "EnableLocalization": false
  },
  "AllowedHosts": "*"
}
